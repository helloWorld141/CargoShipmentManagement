<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anh_huynh2111.siacargomeasurement.MainActivitiy"
    tools:showIn="@layout/activity_main_activitiy">

    <Button
        android:id="@+id/newBgButton"
        android:layout_width="152dp"
        android:layout_height="45dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="18dp"
        android:elevation="0dp"
        android:onClick="newBgOnClick"
        android:text="New background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="152dp"
        android:layout_height="45dp"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="16dp"
        android:elevation="0dp"
        android:onClick="buttonOnClick"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="427dp"
        android:foreground="@android:color/holo_orange_light"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="-2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></LinearLayout>

</android.support.constraint.ConstraintLayout>
